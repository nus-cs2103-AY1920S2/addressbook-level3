<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane styleClass="statistics-bar" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10" />
  </columnConstraints>
  <HBox spacing="30" alignment="bottom_left">
    <Label fx:id="wishlist" />
    <Label fx:id="applied" />
    <Label fx:id="interview" />
    <Label fx:id="offered" />
    <Label fx:id="rejected" />
    <Label fx:id="ghosted" />
    <Label fx:id="total" />
  </HBox>
</GridPane>
