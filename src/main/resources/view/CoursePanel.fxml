<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.SplitPane?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <VBox fx:id="coursePanel" styleClass="pane-with-border" VBox.vgrow="ALWAYS" spacing="6">
        <padding>
            <Insets top="10" bottom="10" left="10" right="10"/>
        </padding>
        <Label fx:id="courseName" text="\$courseName" wrapText="true" styleClass="module_code"></Label>

        <SplitPane VBox.vgrow="ALWAYS" dividerPositions="0.5">
            <VBox>
                <Label text="COURSE REQUIREMENT" styleClass="title"/>
                <ListView fx:id="requirements" styleClass="pane-with-border" VBox.vgrow="ALWAYS" minWidth="320"/>
            </VBox>

            <VBox>
                <Label text="FOCUS AREA" styleClass="title"/>
                <ListView fx:id="focusAreas" styleClass="pane-with-border" VBox.vgrow="ALWAYS" minWidth="320"/>
            </VBox>

        </SplitPane>


    </VBox>

</VBox>
