<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.stage.*?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<fx:root minHeight="640" minWidth="540" resizable="false" title="ZeroToOne Report Card" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">

    <icons>
        <Image url="@/images/icon.png" />
    </icons>
    <scene>
    <Scene>
        <stylesheets>
            <URL value="@css/DarkTheme.css" />
            <URL value="@css/Extensions.css" />
        </stylesheets>
        <AnchorPane styleClass="background">

            <VBox>
                <HBox>
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                     <Text fx:id="statisticsTitle">ZeroToOne Report Card</Text>
                </HBox>

                <HBox>
                    <padding>
                        <Insets bottom="10" left="10" right="10" />
                    </padding>
                    <Text fx:id="statisticsSubTitle">Statistics generated from </Text>
                </HBox>

                <VBox alignment="CENTER_LEFT">
                        <HBox>
                            <Label prefWidth="175.0" styleClass="metricLabel">Total # of Workouts: </Label>
                            <Label fx:id="totalWorkoutCount" styleClass="metricResult">3</Label>
                        </HBox>

                        <HBox>
                            <Label prefWidth="175.0" styleClass="metricLabel" text="Total time Spend:">Total time Spend: </Label>
                            <Label fx:id="totalTime"  styleClass="metricResult" text="1" />
                        </HBox>

                        <HBox>
                            <Label prefWidth="175.0" styleClass="metricLabel">Average Time per day:</Label>
                            <Label fx:id="averageTimePerDay" styleClass="metricResult" text="1" />
                        </HBox>
                </VBox>

                <VBox fx:id="lineChartContainer" alignment="CENTER"/>
            </VBox>



        </AnchorPane>



    </Scene>
  </scene>
</fx:root>
