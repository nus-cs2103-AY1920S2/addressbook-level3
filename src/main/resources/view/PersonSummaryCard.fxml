<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" maxWidth="200" prefWidth="20" />
        </columnConstraints>
        <padding>
            <Insets top="5" right="5" bottom="5" left="15" />
        </padding>
        <FlowPane fx:id="tags" />

        <Label text="Name: " GridPane.columnIndex="0"
               GridPane.rowIndex="0" GridPane.columnSpan="1"
               GridPane.rowSpan="1" >
            <font>
                <Font name="Arial" size="20" ></Font>
            </font>
            <GridPane.margin>
                <Insets top="0" right="0" bottom="10" left="0"></Insets>
            </GridPane.margin>
        </Label>

        <Label fx:id="name" styleClass="cell_small_label" text="\$address"
               GridPane.columnIndex="1"
               GridPane.rowIndex="0" GridPane.columnSpan="1"
               GridPane.rowSpan="1" >
            <font>
                <Font name="Arial" size="20" ></Font>
            </font>
            <GridPane.margin>
                <Insets top="0" right="0" bottom="10" left="0"></Insets>
            </GridPane.margin>
        </Label>


        <Label text="ID: " GridPane.columnIndex="0"
               GridPane.rowIndex="1" GridPane.columnSpan="1"
               GridPane.rowSpan="1" >
            <font>
                <Font name="Arial" size="20" ></Font>
            </font>
            <GridPane.margin>
                <Insets top="0" right="0" bottom="10" left="0"></Insets>
            </GridPane.margin>
        </Label>

        <Label fx:id="userid" styleClass="cell_small_label" text="\$address"
               GridPane.columnIndex="1"
               GridPane.rowIndex="1" GridPane.columnSpan="1"
               GridPane.rowSpan="1" >
            <font>
                <Font name="Arial" size="20" ></Font>
            </font>
            <GridPane.margin>
                <Insets top="0" right="0" bottom="10" left="0"></Insets>
            </GridPane.margin>
        </Label>


        <Label text="NRIC: " GridPane.columnIndex="0"
               GridPane.rowIndex="2" GridPane.columnSpan="1"
               GridPane.rowSpan="1" >
            <font>
                <Font name="Arial" size="20" ></Font>
            </font>
            <GridPane.margin>
                <Insets top="0" right="0" bottom="10" left="0"></Insets>
            </GridPane.margin>
        </Label>

        <Label fx:id="nric" styleClass="cell_small_label" text="\$address"
               GridPane.columnIndex="1"
               GridPane.rowIndex="2" GridPane.columnSpan="1"
               GridPane.rowSpan="1" >
            <font>
                <Font name="Arial" size="20" ></Font>
            </font>
            <GridPane.margin>
                <Insets top="0" right="0" bottom="10" left="0"></Insets>
            </GridPane.margin>
        </Label>


        <Label text="Age: " GridPane.columnIndex="0"
               GridPane.rowIndex="3" GridPane.columnSpan="1"
               GridPane.rowSpan="1" >
            <font>
                <Font name="Arial" size="20" ></Font>
            </font>
            <GridPane.margin>
                <Insets top="0" right="0" bottom="10" left="0"></Insets>
            </GridPane.margin>
        </Label>

        <Label fx:id="age" styleClass="cell_small_label" text="\$address"
               GridPane.columnIndex="1"
               GridPane.rowIndex="3" GridPane.columnSpan="1"
               GridPane.rowSpan="1" >
            <font>
                <Font name="Arial" size="20" ></Font>
            </font>
            <GridPane.margin>
                <Insets top="0" right="0" bottom="10" left="0"></Insets>
            </GridPane.margin>
        </Label>


        <Label text="Contact: " GridPane.columnIndex="0"
               GridPane.rowIndex="4" GridPane.columnSpan="1"
               GridPane.rowSpan="1" >
            <font>
                <Font name="Arial" size="20" ></Font>
            </font>
            <GridPane.margin>
                <Insets top="0" right="0" bottom="10" left="0"></Insets>
            </GridPane.margin>
        </Label>

        <Label fx:id="mobile" styleClass="cell_small_label" text="\$address"
               GridPane.columnIndex="1"
               GridPane.rowIndex="4" GridPane.columnSpan="1"
               GridPane.rowSpan="1" >
            <font>
                <Font name="Arial" size="20" ></Font>
            </font>
            <GridPane.margin>
                <Insets top="0" right="0" bottom="10" left="0"></Insets>
            </GridPane.margin>
        </Label>
    </GridPane>
</HBox>
