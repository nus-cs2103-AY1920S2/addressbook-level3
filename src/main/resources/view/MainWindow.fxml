<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" minHeight="600"
  minWidth="450"
  onCloseRequest="#handleExit" title="Address App" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/8">
  <icons>
    <Image url="@/images/address_book_32.png"/>
  </icons>
  <scene>
    <Scene>
      <VBox>
        <HBox>
          <VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="500.0" prefWidth="100.0" spacing="5"
            xmlns="http://javafx.com/javafx/8.0.171" fx:id="buttonBar">
            <children>
              <Button mnemonicParsing="false" onMouseClicked="#handleSwitchToStudent" prefHeight="80.0"
                prefWidth="80.0" text="Students"/>
              <Button mnemonicParsing="false" onMouseClicked="#handleSwitchToTeacher" prefHeight="80.0"
                prefWidth="80.0" text="Teachers"/>
              <Button mnemonicParsing="false" onMouseClicked="#handleSwitchToCourse" prefHeight="80.0"
                prefWidth="80.0" text="Courses"/>
              <Button mnemonicParsing="false" onMouseClicked="#handleSwitchToFinance" prefHeight="80.0"
                prefWidth="80.0" text="Finances"/>
            </children>
          </VBox>

          <VBox>
            <StackPane VBox.vgrow="NEVER" styleClass="pane-with-border"
              fx:id="commandBoxPlaceholder">
              <padding>
                <Insets bottom="5" left="10" right="10" top="5"/>
              </padding>
            </StackPane>

            <StackPane VBox.vgrow="NEVER" maxHeight="100"
              minHeight="100"
              prefHeight="100" styleClass="pane-with-border" fx:id="resultDisplayPlaceholder">
              <padding>
                <Insets bottom="5" left="10" right="10" top="5"/>
              </padding>
            </StackPane>

            <StackPane VBox.vgrow="NEVER" fx:id="statusbarPlaceholder"/>

            <VBox SplitPane.resizableWithParent="false" minWidth="340" prefWidth="340"
              fx:id="dataList">
              <StackPane VBox.vgrow="ALWAYS" fx:id="dataListPanelPlaceholder"/>
              <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
              </padding>
            </VBox>

          </VBox>
        </HBox>

        <MenuBar VBox.vgrow="NEVER" fx:id="menuBar">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit"/>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" onAction="#handleHelp" text="Help"
              fx:id="helpMenuItem"/>
          </Menu>
        </MenuBar>
      </VBox>

      <stylesheets>
        <URL value="@DarkTheme.css"/>
        <URL value="@Extensions.css"/>
      </stylesheets>
    </Scene>
  </scene>
</fx:root>
