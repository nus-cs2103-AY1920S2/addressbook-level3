<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root minHeight="670" minWidth="1000" onCloseRequest="#handleExit" title="Coupon Stash" type="javafx.stage.Stage"
         xmlns="http://javafx.com/javafx/11.0" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/coupon_stash_32.png"/>
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@Stylesheet.css"/>
      </stylesheets>

      <VBox alignment="TOP_CENTER" styleClass="background" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        <HBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" minWidth="680">
          <StackPane fx:id="tabPanePlaceholder" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"/>
          <StackPane fx:id="calendarResultPlaceholder" alignment="TOP_RIGHT" styleClass="pane-with-border"
                     HBox.hgrow="NEVER" VBox.vgrow="ALWAYS">
            <padding>
              <Insets right="7" top="4"/>
            </padding>
          </StackPane>
        </HBox>

        <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" VBox.vgrow="NEVER" prefHeight="30">
          <padding>
            <Insets bottom="5" left="27" right="7" top="5"/>
          </padding>
        </StackPane>
      </VBox>
    </Scene>
  </scene>
</fx:root>
