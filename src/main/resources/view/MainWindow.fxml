<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<?import javafx.scene.control.SplitPane?>
<fx:root minHeight="600" minWidth="450" onCloseRequest="#handleExit" title="TA-Tracker App" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/address_book_32.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
               <Menu mnemonicParsing="false" text="Statistics">
                  <items>
                     <MenuItem fx:id="helpMenuItem1" mnemonicParsing="false" onAction="#handleHelp" text="Statistics" />
                  </items>
               </Menu>
        </MenuBar>

        <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>

        <StackPane fx:id="resultDisplayPlaceholder" maxHeight="100" minHeight="100" prefHeight="100" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>

        <TabPane prefHeight="300.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
          <tabs>
            <Tab fx:id="studentListTab" text="Students">
              <content>
                <SplitPane dividerPositions="0.6, 0.8">
                  <items>
                    <StackPane fx:id="studentListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                    <StackPane fx:id="moduleListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                    <StackPane fx:id="groupListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                  </items>
                </SplitPane>
              </content>
            </Tab>
            <Tab fx:id="sessionListTab" text="Sessions">
              <content>
                <StackPane fx:id="sessionListPanelPlaceholder" VBox.vgrow="ALWAYS" />
              </content>
            </Tab>
            <Tab fx:id="claimsListTab" text="Claims">
               <content>
                 <SplitPane dividerPositions="0.8">
                   <items>
                     <StackPane fx:id="claimsListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                     <StackPane fx:id="moduleListPanelPlaceholderCopy" VBox.vgrow="ALWAYS" />
                   </items>
                 </SplitPane>               </content>
            </Tab>
          </tabs>
        </TabPane>

        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />

      </VBox>
    </Scene>
  </scene>
</fx:root>
