<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<HBox fx:id="pomodoroPane" alignment="CENTER" maxHeight="50.0" maxWidth="800.0" styleClass="tasklist-card" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="taskInProgress" contentDisplay="CENTER" graphicTextGap="5.0" text="taskInProgress">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Region minWidth="10.0" HBox.hgrow="ALWAYS" />
      <Label fx:id="timer" alignment="CENTER_RIGHT" contentDisplay="CENTER" text="timer">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</HBox>
