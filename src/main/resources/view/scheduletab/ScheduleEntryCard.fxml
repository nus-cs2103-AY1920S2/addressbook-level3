<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="5" left="15" right="5" top="5"/>
    </padding>
    <HBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="id" styleClass="cell_big_label">
            <minWidth>
                <!-- Ensures that the label text is never truncated -->
                <Region fx:constant="USE_PREF_SIZE"/>
            </minWidth>
        </Label>
        <Label fx:id="title" styleClass="cell_big_label" text="\$title" wrapText="true"/>
        <ImageView fx:id="imageViewType" fitHeight="21.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true"/>
    </HBox>
    <Label fx:id="type" styleClass="cell_small_label" text="\$type" wrapText="true"/>
    <Label fx:id="startTime" styleClass="cell_small_label" text="\$starttime" wrapText="true"/>
    <Label fx:id="endTime" styleClass="cell_small_label" text="\$endtime" wrapText="true"/>
    <Label fx:id="activityLocation" styleClass="cell_small_label" text="\$location" wrapText="true"/>
</VBox>
