<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<?import javafx.scene.image.Image?>

<fx:root resizable="false" title="Grocery List" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/grocery.png" />
    </icons>
    <scene>
        <Scene>
            <VBox alignment="CENTER">
                <children>
                    <ScrollPane fx:id="scrollPane">
                        <Label fx:id="groceryList" text="Label" />
                    </ScrollPane>
                    <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyGroceryList" text="Copy" />
                </children>
                <opaqueInsets>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                </opaqueInsets>
                <padding>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                </padding>
            </VBox>
        </Scene>
    </scene>
</fx:root>
