<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<HBox id="cardPaneProgress" fx:id="cardPane" prefHeight="80.0" prefWidth="236.0"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <VBox alignment="CENTER_LEFT" minHeight="70" GridPane.columnIndex="0">
            <HBox alignment="CENTER_LEFT">
                <ImageView fitHeight="47.0" fitWidth="49.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@ourImages/progress.png"/>
                    </image>
                </ImageView>
                <Line endY="69.29289245605469" startY="-8.204582214355469" stroke="#ffffff3f">
                    <rotationAxis>
                        <Point3D/>
                    </rotationAxis>
                </Line>
                <VBox prefHeight="80.0" prefWidth="224.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="100.0">
                            <padding>
                                <Insets left="15.0"/>
                            </padding>
                            <children>
                                <Label styleClass="cell_big_label" text="Student ID: ">
                                    <minWidth>
                                        <!-- Ensures that the label text is never truncated -->
                                        <Region fx:constant="USE_PREF_SIZE"/>
                                    </minWidth>
                                </Label>
                                <Label fx:id="sid" styleClass="cell_big_label" text="\$sid"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="100.0">
                            <padding>
                                <Insets left="15.0"/>
                            </padding>
                            <children>
                                <Label styleClass="cell_small_label" text="Assignment ID:">
                                    <minWidth>
                                        <Region fx:constant="USE_PREF_SIZE"/>
                                    </minWidth>
                                </Label>
                                <Label fx:id="aid" prefHeight="21.0" prefWidth="78.0" styleClass="cell_small_label"
                                       text="\$aid"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="100.0">
                            <padding>
                                <Insets left="15.0"/>
                            </padding>
                            <children>
                                <Label styleClass="cell_small_label" text="Status: ">
                                    <minWidth>
                                        <Region fx:constant="USE_PREF_SIZE"/>
                                    </minWidth>
                                </Label>
                                <Label fx:id="isDone" styleClass="cell_small_label" text="\$isDone"/>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="5.0" top="5.0"/>
                    </padding>
                </VBox>
                <padding>
                    <Insets left="15.0"/>
                </padding>
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
            </HBox>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </VBox>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
        </rowConstraints>
    </GridPane>
</HBox>
