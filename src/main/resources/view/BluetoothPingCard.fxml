<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" maxWidth="200" prefWidth="20" />
        </columnConstraints>
        <padding>
            <Insets top="5" right="5" bottom="5" left="15" />
        </padding>
        <FlowPane fx:id="tags" />

        <Label text="Ping timestamp: " GridPane.columnIndex="0"
               GridPane.rowIndex="0" GridPane.columnSpan="1"
               GridPane.rowSpan="1" >
            <font>
                <Font name="Arial" size="20" ></Font>
            </font>
            <GridPane.margin>
                <Insets top="0" right="0" bottom="20" left="0"></Insets>
            </GridPane.margin>
        </Label>

        <Label fx:id="timestamp" styleClass="cell_small_label" text="\$timestamp"
               GridPane.columnIndex="1"
               GridPane.rowIndex="0" GridPane.columnSpan="1"
               GridPane.rowSpan="1" >
            <font>
                <Font name="Arial" size="20" ></Font>
            </font>
            <GridPane.margin>
                <Insets top="0" right="0" bottom="20" left="0"></Insets>
            </GridPane.margin>
        </Label>

        <!--<Label text="" />-->
        <Label text="Contact IDs: " GridPane.columnIndex="0"
               GridPane.rowIndex="1" GridPane.columnSpan="1"
               GridPane.rowSpan="1" >
            <font>
                <Font name="Arial" size="20" ></Font>
            </font>
            <GridPane.margin>
                <Insets top="0" right="0" bottom="20" left="0"></Insets>
            </GridPane.margin>
        </Label>

        <Label fx:id="contacts" styleClass="cell_small_label" text="\$address"
               GridPane.columnIndex="1"
               GridPane.rowIndex="1" GridPane.columnSpan="1"
               GridPane.rowSpan="1" >
            <font>
                <Font name="Arial" size="20" ></Font>
            </font>
            <GridPane.margin>
                <Insets top="0" right="0" bottom="20" left="0"></Insets>
            </GridPane.margin>
        </Label>
    </GridPane>
</HBox>
