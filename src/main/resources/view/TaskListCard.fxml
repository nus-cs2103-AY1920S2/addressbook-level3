<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox fx:id="cardbox" alignment="CENTER_LEFT" minHeight="55" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="moduleCode" />
        <Label fx:id="taskNum" styleClass="cell_big_label" />
      </HBox>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="taskDescription" styleClass="cell_big_label" textOverrun="CLIP" wrapText="true"/>
      </HBox>
      <Label fx:id="taskTime" styleClass="cell_big_label" textOverrun="CLIP" wrapText="true"/>
    </VBox>
  </GridPane>
</HBox>
