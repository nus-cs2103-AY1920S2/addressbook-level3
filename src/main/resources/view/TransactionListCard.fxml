<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPaneTransaction" fx:id="cardPaneTransaction" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
            </HBox>
         <HBox>
            <children>
               <Label text="Customer" />
               <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="customer" styleClass="cell_small_label" text="\$customer" />
            </children>
         </HBox>
         <HBox>
            <children>
               <Label text="Product" />
               <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="product" styleClass="cell_small_label" text="\$product" />
            </children>
         </HBox>
         <HBox>
            <children>
               <Label text="Date/ time" />
               <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="dateTime" styleClass="cell_small_label" text="\$dateTime" />
            </children>
         </HBox>
         <HBox>
            <children>
               <Label text="Quantity" />
               <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="quantity" styleClass="cell_small_label" text="\$quantity" />
            </children>
         </HBox>
         <HBox>
            <children>
               <Label text="Amount" />
               <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="money" styleClass="cell_small_label" text="\$money" />
            </children>
         </HBox>
         <HBox>
            <children>
               <Label text="Description" />
               <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="description" styleClass="cell_small_label" text="\$description" />
            </children>
         </HBox>
        </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</HBox>
